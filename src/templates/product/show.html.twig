{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td> <img src="{{ asset('images' ~ product.image) }}"  alt="product image"></td>
            </tr>
            <tr>
                <th>description</th>
                <td>{{ product.description }}</td>
            </tr>


        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>

{% endblock %}
